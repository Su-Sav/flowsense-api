# =====================
# FlowSense API - .env.example
# =====================

# Server
PORT=3000
NODE_ENV=development

# ---------------------
# Auth Configuration
# ---------------------

# Toggle Auth (nur für Entwicklung)
# DISABLE_AUTH=true -> Auth deaktiviert (lokal testen)
DISABLE_AUTH=true

# XSUAA OAuth2 (Cloud Foundry)
XSUAA_URL=https://<subdomain>.authentication.<region>.hana.ondemand.com/oauth/token
XSUAA_CLIENT_ID=your-client-id
XSUAA_CLIENT_SECRET=your-client-secret
XSAPPNAME=flowsense-api

# Optional: Allowlist für bestimmte Client-IDs (kommasepariert)
ALLOWED_CLIENT_IDS=

# ---------------------
# OpenAI / LLM Settings
# ---------------------
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_MS=8000

# ---------------------
# FlowSense Retry Defaults
# ---------------------
FS_MAX_ATTEMPTS_DEFAULT=6

# ---------------------
# Circuit Breaker Settings
# ---------------------
CB_THRESHOLD=3
CB_COOLDOWN_MS=60000

# ---------------------
# Debug / Dev-Only Endpoints
# ---------------------
# Schaltet interne Debug-Endpunkte wie /cb-state frei
EXPOSE_DEBUG_ENDPOINTS=false



